<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="modulo3.nicaela.com.asistentelucydev.WelcomeActivity">

    <include layout="@layout/content_welcome" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="451dp"
        android:weightSum="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/tuprimero"
            android:id="@+id/imageView2" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@mipmap/lucy_smalle"
            android:id="@+id/fab"
            android:layout_weight="0.77"
            android:topRightRadius = "60dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/fab_margin"
            app:backgroundTint="@android:color/white" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="87dp">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="384dp"
                android:layout_height="176dp"
                android:foregroundGravity="center_vertical|center_horizontal|center"
                android:weightSum="1"
                android:gravity="center"
                android:visibility="invisible"
                android:id="@+id/button_list">

                <android.support.design.widget.FloatingActionButton
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:clickable="true"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/ic_launcher1"
                    android:id="@+id/f2"
                    android:topRightRadius = "70dp"
                    android:layout_margin="@dimen/fab_margin"
                    android:layout_gravity="fill"
                    android:layout_weight="0.06"
                    app:backgroundTint="@android:color/holo_orange_light" />

                <android.support.design.widget.FloatingActionButton
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:clickable="true"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/editfile48"
                    android:id="@+id/formRegister"
                    android:topRightRadius = "60dp"
                    android:layout_gravity="bottom|right|fill_vertical|center_horizontal|fill_horizontal|center|clip_vertical|start|end"
                    android:layout_margin="@dimen/fab_margin"
                    android:foregroundGravity="bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|clip_vertical|clip_horizontal"
                    app:backgroundTint="@android:color/holo_orange_light" />

                <android.support.design.widget.FloatingActionButton
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:clickable="true"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/ic_launcher3"
                    android:id="@+id/f4"
                    android:topRightRadius = "90dp"
                    android:layout_margin="@dimen/fab_margin"
                    android:contextClickable="true"
                    android:layout_gravity="center_horizontal|fill"
                    app:backgroundTint="@android:color/holo_orange_light" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/button_list2"
                android:visibility="invisible">

                <Button
                    android:text="Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button8"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
